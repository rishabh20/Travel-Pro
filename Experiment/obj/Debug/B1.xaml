<Page
    x:Class="Experiment.B1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Experiment"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    
    
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot" Background="White" Margin="0,-26.667,0,-0.333">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="10,60,9,527.667" Grid.RowSpan="2">
            <TextBlock Text="Places to Visit" Foreground="SlateGray" TextAlignment="Center" Margin="-15,-6.5,-2.167,26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" Height="76"/>
        </StackPanel>
        <Grid Margin="0,0,-1,471.667" Background="Black">
            <StackPanel Orientation="Horizontal" Margin="0,0,1,0">
                <StackPanel x:ConnectionId='1' x:Name="Ico1"                       Margin="0,0,0,-37.667" Width="81">
                    <Image Source="/Assets/Info.png" Stretch="Uniform" Height="71" Margin="0,0,-58.167,0"/>
                </StackPanel>
                <StackPanel x:ConnectionId='2' x:Name="Ico2"                     >
                    <Image Source="/Assets/Map.png" Height="63" Width="211"/>
                </StackPanel>
                <StackPanel x:ConnectionId='3' x:Name="Ico3"                     >
                    <Image Source="/Assets/Mic.png" Width="128" Height="70"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <ScrollViewer Margin="0,126,0,-0.333" Grid.RowSpan="2">
            <!--TODO: Content should be placed within the following grid-->
            <StackPanel x:Name="ContentRoot">
                <TextBlock Foreground="Black" TextAlignment="Center" Text="Himeji Castle" FontSize="20" Margin="0,0,0,0" Width="400" Height="36" RequestedTheme="Light" FontFamily="Cambria" FontWeight="Bold"/>


                <Image Width="300" Source="/Assets/Himeji.jpg" Margin="0,10,0,0"/>
                <Line X1="0" Y1="10" X2="480" Y2="10" Stroke="Black" StrokeThickness="2"/>
                <TextBlock Foreground="Black" TextAlignment="Center" FontFamily="Cambria" FontWeight="Bold" Text="Kiyomizu-dera" FontSize="20" Margin="0" RequestedTheme="Light" />
                <Image Width="300" Source="/Assets/Kiyomizu.jpg" Margin="0,10,0,0"/>
                <Line X1="0" Y1="10" X2="480" Y2="10" Stroke="Black" StrokeThickness="2"/>
                <TextBlock Foreground="Black" TextAlignment="Center" Text="MtFuji" FontSize="20" Margin="0,0,0,0" Width="400" Height="36" RequestedTheme="Light" FontFamily="Cambria" FontWeight="Bold"/>


                <Image Width="300" Source="/Assets/Mount Fuji.jpg" Margin="0,10,0,0"/>
                <Line X1="0" Y1="10" X2="480" Y2="10" Stroke="Black" StrokeThickness="2"/>
                <TextBlock Foreground="Black" TextAlignment="Center" FontFamily="Cambria" FontWeight="Bold" Text="Hiroshima" FontSize="20" Margin="0" RequestedTheme="Light" />
                <Image Width="300" Source="/Assets/Hiroshima.jpg" Margin="0,10,0,0"/>
                <Line X1="0" Y1="10" X2="480" Y2="10" Stroke="Black" StrokeThickness="2"/>
                <TextBlock Foreground="Black" TextAlignment="Center" FontFamily="Cambria" FontWeight="Bold" Text="Tokyo Tower" FontSize="20" Margin="0" RequestedTheme="Light" />
                <Image Width="300" Source="/Assets/TokyoTower.jpg" Margin="0,10,0,0"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

